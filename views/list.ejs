<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">
    <% newListItems.forEach(function(newListItems){ %>
      <form action="/delete" method="post">
        <div class="item">
            <input type="checkbox" name="listItem" value="<%=  newListItems._id %>" onChange="this.form.submit()">
            <p><%=  newListItems.name  %></p>
        </div>
      </form>
      <% }) %>

      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="list">+</button>
      </form>
  </div>

<%- include("footer") -%>
